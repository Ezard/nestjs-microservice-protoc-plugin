{
  "name": "nestjs-microservice-protoc-plugin",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "protoc:compile": "protoc --experimental_allow_proto3_optional --plugin=../protoc-plugin/protoc-gen-ts_proto.cmd --ts_proto_out=. --ts_proto_opt=protos_dir=../protos,services_file=services.json -I ../protos ../protos/*.proto",
    "lint:eslint": "eslint src",
    "lint:prettier": "prettier src --check",
    "test:unit": "jest",
    "test:unit:watch": "jest --watch",
    "test:unit:cov": "jest --coverage",
    "test:unit:cov:watch": "jest --coverage --watch",
    "test:mutation": "stryker run"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "protobufjs": "^6.10.1",
    "sequency": "^0.19.2",
    "ts-poet": "^3.3.1"
  },
  "devDependencies": {
    "@stryker-mutator/core": "4.3.1",
    "@stryker-mutator/jest-runner": "4.3.1",
    "@stryker-mutator/typescript-checker": "4.3.1",
    "@types/jest": "26.0.23",
    "@types/node": "14.17.4",
    "@typescript-eslint/eslint-plugin": "4.28.1",
    "@typescript-eslint/parser": "4.28.1",
    "eslint": "7.30.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-import": "2.23.4",
    "eslint-plugin-jest": "24.3.6",
    "jest": "26.6.3",
    "prettier": "2.2.1",
    "ts-jest": "26.5.6",
    "ts-proto": "1.71.0",
    "typescript": "4.3.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "jsdom",
    "collectCoverageFrom": [
      "**/*.ts"
    ],
    "coveragePathIgnorePatterns": [
      ".spec.ts"
    ]
  }
}
