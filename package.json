{
  "name": "nestjs-microservice-protoc-plugin",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "protoc:compile": "protoc --experimental_allow_proto3_optional --plugin=../protoc-plugin/protoc-gen-ts_proto.cmd --ts_proto_out=. --ts_proto_opt=protos_dir=../protos,services_file=services.json -I ../protos ../protos/*.proto",
    "lint:eslint": "eslint src",
    "lint:prettier": "prettier src --check",
    "test:unit": "jest",
    "test:unit:watch": "jest --watch",
    "test:unit:cov": "jest --coverage",
    "test:unit:cov:watch": "jest --coverage --watch",
    "test:mutation": "stryker run"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@protobuf-ts/plugin-framework": "^1.0.13",
    "protobufjs": "^6.10.1",
    "sequency": "^0.19.2",
    "ts-poet": "^4.0.0"
  },
  "devDependencies": {
    "@stryker-mutator/core": "5.4.0",
    "@stryker-mutator/jest-runner": "5.4.0",
    "@stryker-mutator/typescript-checker": "5.4.0",
    "@types/jest": "26.0.24",
    "@types/node": "14.17.19",
    "@typescript-eslint/eslint-plugin": "4.31.2",
    "@typescript-eslint/parser": "4.31.2",
    "eslint": "7.32.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-import": "2.24.2",
    "eslint-plugin-jest": "24.4.2",
    "jest": "27.2.1",
    "prettier": "2.4.1",
    "ts-jest": "27.0.5",
    "typescript": "4.3.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "jsdom",
    "collectCoverageFrom": [
      "**/*.ts"
    ],
    "coveragePathIgnorePatterns": [
      ".spec.ts",
      "plugin.ts"
    ]
  }
}
